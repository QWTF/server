float (float tno) TeamFortress_GetRealScore =
{
	local entity te;
	local float total;

	te = find (world, classname, "player");
	while (te)
	{
		if (te.team_no == tno)
		{			
			total = total + te.real_frags;
		}
		te = find (te, classname, "player");
	}
	return total;
}
